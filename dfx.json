{
  "canisters": {
    "nexBit_backend": {
      "build": "python -m kybra nexBit_backend src/nexBit_backend/src/main.py",
      "candid": "src/nexBit_backend/nexBit_backend.did",
      "gzip": true,
      "metadata": [
        {
          "name": "candid:service"
        }
      ],
      "tech_stack": {
        "cdk": {
          "kybra": {}
        },
        "language": {
          "python": {}
        }
      },
      "type": "custom",
      "wasm": ".kybra/nexBit_backend/nexBit_backend.wasm"
    },
    "nexBit_frontend": {
      "dependencies": ["nexBit_backend"],
      "source": ["src/nexBit_frontend/dist"],
      "type": "assets",
      "workspace": "nexBit_frontend"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    }
  },
  "defaults": {
    "bitcoin": {
      "enabled": true,
      "nodes": ["127.0.0.1:18444"],
      "log_level": "info"
    }
  },
  "output_env_file": ".env",
  "version": 1
}
